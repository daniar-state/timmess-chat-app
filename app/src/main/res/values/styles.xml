<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="patternViewStyle">@style/PatternView</item>
        <item name="android:actionModeBackground">@color/md_orange_400</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="DarkTheme" parent="@style/AppTheme">
        <item name="android:colorBackground">@color/md_040404</item>
        <item name="android:textColor">@color/md_fdfdfd</item>
        <item name="android:textColorSecondary">@color/md_fdfdfd</item>
        <item name="android:textColorPrimary">@color/md_fdfdfd</item>
        <item name="android:listDivider">@color/md_fdfdfd</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="DarkTheme_MessageList" parent="@style/AppTheme">
        <item name="colorAccent">@color/md_fdfdfd</item>
        <item name="android:textColor">@color/md_fdfdfd</item>
        <item name="android:textColorPrimary">@color/md_fdfdfd</item>
    </style>

    <!--<style name="MainActyActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">-->
